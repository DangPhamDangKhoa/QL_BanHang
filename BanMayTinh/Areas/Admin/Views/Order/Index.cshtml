@model IEnumerable<OrderModel>
@{
    ViewData["title"] = "Orders Listed";
}
<h3>List Orders</h3>

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Order code</th>
            <th scope="col">UserName </th>
            <th scope="col">Order Date</th>
            <th scope="col">Order Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>#</th>
                <th scope="row">@item.OrderCode</th>
                <td>@item.UserName</td>
                <td>@item.CreatedDate</td>

                

                <td>
                    @if (@item.Status == 1)
                    {
                        <span class="text text-success">Đơn mới tạo</span>
                    }
                    else
                    {
                        <span class="text text-danger">Đơn đã xử lý</span>
                    }
                </td>


                <td>
                    <a asp-action="ViewOrder" class="btn btn-warning btn-sm" asp-controller="Order" asp-route-ordercode="@item.OrderCode">View</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Order" asp-route-Id="@item.Id">Delete</a>
                </td>
            </tr>
        }


    </tbody>
</table>